<div class="container m-4">
<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :prefecture_name %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, class: 'form-control', id: "address_prefecture_name"  %>
  </div>

  <div class="field">
    <%= f.label :address_city %><br />
    <%= f.text_field :address_city, autofocus: true, class: 'form-control', id:"address_city" %>
  </div>

  <div class="field">
    <%= f.label :address_stree %><br />
    <%= f.text_field :address_stree, autofocus: true, class: 'form-control', id: "address_street" %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions my-2 ">
    <%= f.submit "Sign up", :class=>"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
