<!-- 投稿後の詳細画面books/id  -->

<div class="container px-5 px-sm-0 mt-3",>
  <div class="row">
    <div class="col-md-3" id="sticky-sidebar">
     <!-- サイドバー  -->
     <%= render 'users/said', user: @user %>
     <%= render 'books/said', book: @book_new %>
    </div>
    <!--投稿一覧画面-->
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
     <table class="table">
     <tbody>
       <tr>
         <td><%= link_to user_path(@user) do %>
             <%=  attachment_image_tag @user, :profile_image, size:'50x50',fallback: "no_image.jpg" %>
         <p><%= @book.user.name %></p><% end %></td>
         <td><%= link_to @book.title, book_path(@book) %></td>
         <td><%= @book.body %></td>
         <td class="favorite-btn" id="favorites_buttons_<%= @book.id %>"><%= render "favorites/favorite", book: @book %><%= @favorites_count %></td>
         <td>コメント数:<%= @book.book_comments.count %></td>
         <td><% if current_user.id == @user.id %><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %><% end %></td>
         <td><% if current_user.id == @user.id %><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", data: { confirm: '本当に消しますか？' } %><% end %></td>
       </tr>
    </tbody>
  </table>
<div id="comments_list_<%= @book.id %>"><%= render "book_comments/comment_list", book: @book_comment %><%= @book_comment_count %></div>
<div id="comments_form_<%= @book.id %>"><%= render "book_comments/book_comment", book: @book_comment %><%= @book_comment_count %></div>
    </div>
  </div>
</div>
</div>
