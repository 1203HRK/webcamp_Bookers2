<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid m-4">
  <div class="row">
    <div class="col-3" id="sticky-sidebar">
     <!-- サイドバー  -->

     <%= render 'books/said', book: @book %>
    </div>
    <div class="col-2"></div>
        <div class="col-7">
        <h2>Books</h2>
     <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th> </th>
        </tr>
      </thead>
      <tbody>
       <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, size:'50x50',fallback: "no_image.jpg" %></td>
          <td><%= user.name  %></td>
          <td><!--link_to 'show' で/users/ID　にとばす--><a href="/">show</a></td>
        </tr>
       <% end %>
      </tbody>
  </table>
    </div>
  </div>
</div>
