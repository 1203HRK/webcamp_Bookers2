<div class="edit">

<h1>Editing Book</h1>
<!-- エラーメッセージ※機能しない -->
<% if flash[:notice] %>
    <div class="flash">
         <%= flash[:notice] %>
    </div>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
   <%= f.text_area :body %>
  <div >
   <%= f.submit 'Update Book' , class: "btn btn-success" %>
  </div>

  <%= link_to "Show", book_path(@book) %>
  <a>|</a>
  <%= link_to 'Back', books_path %>
<% end %>

</div>