<!--エラーメッセージOK-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="edit">

<h1>Editing Book</h1>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
   <%= f.text_area :body %>
  <% if current_user.id == @user.id %>
   <div><%= f.submit 'Update Book' , class: "btn btn-success" %></div>
   <% end %>

  <%= link_to "Show", book_path(@book) %>
  <a>|</a>
  <%= link_to 'Back', books_path %>
<% end %>

</div>