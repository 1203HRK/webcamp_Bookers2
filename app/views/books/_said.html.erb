<!--サイドバー books-->
  <div class="mx-auto" style="width: 90%;">
<!--新規投稿-->
<h1>New book</h1>
<!--投稿フォームOK-->
<%= form_with model: book, local:true do |f| %>
  <div class="form-group">
    <p>Title<p>
    <%= f.text_field :title, style:"width: 100%;" %>
  </div>
  <div class="form-group">
   <p>Opinion</p>
    <%= f.text_area :body, style:"width: 100%;" %></br>
    </div>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>
</div>