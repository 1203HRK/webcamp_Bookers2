<!--サイドバー books-->

<!--新規投稿-->
<h1>New book</h1>
<!--エラーメッセージOK-->
<% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <% book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<!--投稿フォームOK-->
<%= form_with model: book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %></br>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>