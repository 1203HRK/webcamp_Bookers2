<!-- Books-->
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th> </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg" %></td>
      <td><%= book.title  %><!-- link_to book.title, books_path(user.id)  --></td>
      <td><%= book.body  %></td>
    </tr>
   <% end %>
  </tbody>
</table>