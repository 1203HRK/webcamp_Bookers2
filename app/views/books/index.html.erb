<!-- Books-->
  <!--エラーメッセージOK-->
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
  <% end %>
<div class="container px-5 px-sm-0 mt-3",>
  <div class="row">
    <div class="col-md-3" id="sticky-sidebar">
     <!-- サイドバー  -->
     <%= render 'users/said', user: @user %>
     <%= render 'books/said', book: @book %>
    </div>
    <!--投稿一覧画面-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table table-hover">
        <thead>
          <tr>
            <th> </th>
            <th>Title</th>
            <th>Opinion</th>
            <th> </th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
         <% @books.each do |book| %>
         <tr>
            <td><%= link_to attachment_image_tag(book.user, :profile_image, size:'50x50',fallback: "no_image.jpg"), user_path(book.user_id) %></td>
            <td><%= link_to book.title, book_path(book.id)  %></td>
            <td><%= book.body  %></td>
             <td>
               <% if Favorite.find_by(user_id: @current_user.id, book_id: @book.id) %>
                 <%= link_to("いいね！済み","/favorites/#{@book.id}/destroy", {method: "post"}) %>
                <% else %>
                 <%= link_to("いいね！", "/favorites/#{@book.id}/create", {method: "post"}) %>
                <% end %>
             </td>
            <td>コメント</td>
          </tr>
           <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>




