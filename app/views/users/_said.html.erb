<!--サイドバー user-->

<div class="profile-container">
<h1>User info</h1>
<p><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
<table>
  <tr class="profile-name">
    <td>name</td>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= user.introduction %></td>
  </tr>
</table>

  <% if user.id == current_user.id %>
    <%= link_to "プロフィール編集", edit_user_path(user), class: "btn btn-outline-secondary" %>
  <% end %>
