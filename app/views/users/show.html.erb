<!-- サイドバー  -->
<%= render 'users/said', user: @user %>
<%= render 'books/said', book: @book %>


<!--投稿一覧画面-->
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th> </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title, book_path(book.id)  %></td>
      <td><%= book.body  %></td>
    </tr>
   <% end %>
  </tbody>
</table>



