<!--Home /users/2 URLOK-->

<div class="profile-container">
<h1>User info</h1>
<p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
<table>
  <tr class="profile-name">
    <td>name</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= @user.introduction %></td>
  </tr>
</table>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

<!--新規投稿画面できない-->
<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %></br>
  <%= f.submit 'Create Book' %>
<% end %>

<!--投稿一覧画面-->
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th> </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg" %></td>
      <td><%= book.title  %></td>
      <td><%= book.body  %></td>
    </tr>
   <% end %>
  </tbody>
</table>



