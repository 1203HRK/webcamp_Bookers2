<!--プロフ編集画面-->
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>
  <!-- エラーメッセージ -->
  <% if @user.errors.any? %>
   <%= @user.errors.count %>error prohibited this obj from being saved:
   <% @user.errors.full_messages.each do |message| %>
     <%= message %>
   <% end %>
  <% end %>
  <!-- 編集フォーム -->
  <%= form_with model:@user, local:true do |f| %>
    <label for="inputName">Name</label></br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></br>
    <label for="inputImage">Image</label></br>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></br>
    <label for="inputIntroduction">Introduction</label></br>
      <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"自己紹介文"%></br>
      <% if current_user.id == @user.id %>
    <div><%= f.submit "Update User", class: "btn btn-secondary" %></div>
      <% end %>
    <% end %>
   </div>
 </div>
</div>